<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

        <TextView
            android:id="@+id/txt_home1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Good Morning,Akshay"
            android:gravity="center_horizontal"
            android:layout_margin="8dp"
            android:textAllCaps="true"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/txt_home2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_home1"
            android:layout_margin="8dp"
            android:text="What are you looking for?"
            android:gravity="center_horizontal"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/mybutton"
            android:gravity="center_vertical|center_horizontal"
            android:paddingTop="8dp"
            android:paddingRight="32dp"
            android:paddingBottom="8dp">

            <ImageButton
                android:id="@+id/img_parking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:background="@color/colorBlueDark"
                android:src="@drawable/parking" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_parking"
                android:gravity="center_vertical|center_horizontal"
                android:paddingTop="4dp"
                android:text="Just Park"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="147dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/mybutton"
            android:gravity="center_vertical|center_horizontal"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/img_parking2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="18dp"
                android:background="@color/colorBlueDark"
                android:src="@drawable/target" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/img_parking2"
                android:layout_toRightOf="@id/img_parking2"
                android:paddingTop="4dp"
                android:text="Find nearest spot"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="210dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/mybutton"
            android:gravity="center_vertical|center_horizontal"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/img_parking3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:background="@color/colorBlueDark"
                android:src="@drawable/booked" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_parking3"
                android:gravity="center_vertical|center_horizontal"
                android:paddingTop="4dp"
                android:text="Reserve spot"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>